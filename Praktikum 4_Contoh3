#include <iostream>
using namespace std;

int main () {

	double nilai;
	char indeks;

	cout << "Masukkan nilai yang diperoleh :"; cin >> nilai;

	//Melakukan konversi nilai menjadi nilai indeks
	if (nilai >= 85) {
		indeks = 'A';
	} else if (nilai >= 70) {
	indeks = 'B';
	} else if (nilai >= 55) {
		indeks = 'C';
	} else if (nilai >= 40) {
		indeks = 'D';
	} else { 
		indeks = 'E';
	}
	//Menampilkan nilai indeks yang didapatkan 
	cout << "Nilai indeks dari nilai "<<nilai<<" adalah "<<indeks;
	system("pause");
	return 0;
}
